# Copy to .env and fill values. Never commit real secrets.

# --- App ---
NODE_ENV=development
APP_VERSION=0.0.1

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=kargo_db

# --- Auth ---
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=1h

# --- Email (SMTP) ---
# Enable SMTP sending (otherwise emails are logged as MAIL_MOCK)
SMTP_ENABLED=false

# Option A: Gmail (App Password)
# EMAIL_USER=your@gmail.com
# EMAIL_PASS=your_google_app_password
# EMAIL_FROM=Your App <your@gmail.com>

# Option B: Generic SMTP
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_SECURE=false   # true usually for 465, false usually for 587
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password
# SMTP_FROM=Your App <no-reply@yourdomain.com>

# Optional hardening / debugging
# SMTP_REQUIRE_TLS=false
# SMTP_TLS_REJECT_UNAUTHORIZED=true
# SMTP_CONNECTION_TIMEOUT_MS=15000
# SMTP_GREETING_TIMEOUT_MS=15000
# SMTP_SOCKET_TIMEOUT_MS=30000
# SMTP_POOL=false
# SMTP_DEBUG=false
# SMTP_VERIFY_ON_BOOT=false

# --- Firebase Admin / Push ---
FIREBASE_PROJECT_ID=
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_JSON=

# --- AWS S3 ---
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
